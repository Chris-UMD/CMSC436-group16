<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/avg_speed"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:alpha="0.5"
        android:background="#34e8eb"
        android:fontFamily="@font/artographie_light"
        android:text="Hello"
        app:layout_constraintBottom_toTopOf="@id/go_accuracy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/go_accuracy"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:alpha="0.5"
        android:background="#9b72e8"
        android:fontFamily="@font/artographie_light"
        android:text="Hi"
        app:layout_constraintBottom_toTopOf="@id/no_go_accuracy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avg_speed" />

    <TextView
        android:id="@+id/no_go_accuracy"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:alpha="0.5"
        android:background="#e0695c"
        android:fontFamily="@font/artographie_light"
        android:text="Hey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/go_accuracy" />

</androidx.constraintlayout.widget.ConstraintLayout>